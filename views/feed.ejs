    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
    function handleLike() {
      document.querySelector(".posts").addEventListener("click", function (e) {
        console.log(e.target.getAttribute("data-"));
        // console.log( data.likes.indexOf(user._id))
        if (e.target.classList.contains("like")) {
          var a = e.target
          axios.get(`/like/${e.target.getAttribute("data-")}`)
            .then(function (response) {
              // console.log(a.classList);
              if (a.classList.contains("ri-heart-3-line")) {
                e.target.classList.add("text-red-500", "ri-heart-3-fill");
                e.target.classList.remove("ri-heart-3-line");
              } else {
                e.target.classList.add("ri-heart-3-line");
                e.target.classList.remove("text-red-500", "ri-heart-3-fill");
              }
              // console.log(response.data.likes.length)
              a.parentNode.parentNode.parentNode.querySelector("h3").textContent = response.data.likes.length + ' likes';
              // .querySelector(".postpic").textContent = response.data.likes.length+ 'likes';  

            })
        }
      });
    }

    function likeAnimation() {
      document.querySelector('.posts').addEventListener('click', function (e) {
        if (e.target.classList.contains('postpic')) {
          var icon = document.createElement('i');
          icon.classList.add('ri-heart-fill', 'text-red-500', 'absolute', 'top-1/2', 'left-1/2', 'transform', '-translate-x-1/2', '-translate-y-1/2', 'text-[3rem]');
          e.target.parentNode.parentNode.appendChild(icon);

          gsap.from(icon, {
            y: -20,
            opacity:1,
          })
          gsap.to(icon, {
            opacity: 0,
            y: 20,
            duration: 0.5,
            delay: 0.5,
            ease: 'linear',
            onComplete: function () {
              e.target.parentNode.parentNode.remove(icon);
            }
          })

        }
      })
    }
    handleLike();
    likeAnimation();


  </script>
